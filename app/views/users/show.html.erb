<% provide(:title, @user.name ) %>
<div class="row">
  <aside class="col-xs-3 col-md-3">
    <section>
      <h1>
        <%= gravatar_for @user%>
        <%= @user.name %>
      </h1>
    </section>
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if signed_in? %>
  </aside>
  <div class="col-sm-9 col-md-9">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>